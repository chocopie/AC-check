{
  "name": "Tenon Check",
  "description": "Checks current page in the Tenon accessibility testing tool",
  "author": "Karl Groves",
  "homepage_url": "https://github.com/karlgroves/Tenon-Check",
  "version": "1.0",
  "permissions": [
    "activeTab", "tabs", "http://*/*", "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Check this page on Tenon.io",
    "default_icon": "assets/icon19.png"
  },
  "icons": { "16": "assets/icon16.png",
           "48": "assets/icon48.png",
          "128": "assets/icon128.png" },
  "manifest_version": 2
}
