{
  "name": "AC Check",
  "description": "Checks current page in AChecker accessibility checker.",
  "version": "1.0",
  "permissions": [
    "activeTab", "tabs", "http://*/*", "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Make this page red"
  },
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "manifest_version": 2
}
