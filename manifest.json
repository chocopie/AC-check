{
  "name": "AC Check",
  "description": "Checks current page in AChecker accessibility checker.",
  "version": "1.0",
  "permissions": [
    "activeTab", "tabs", "http://*/*", "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Check this page on AChecker.ca",
    "default_icon": "assets/icon19.png"
  },
  "icons": { "16": "assets/icon16.png",
           "48": "assets/icon48.png",
          "128": "assets/icon128.png" },
  "manifest_version": 2
}
